<post title="<%= post.title %>" type="<%= post.post_type %>" provider="<%= post.provider_name %>" >
    <content>
        <%= raw(post.content) %>
    </content>
    <handle>
        <mesh>
            <dot>
                <%= render partial: "ui_components/read_state_dot", locals: { post: post } %>
            </dot>
            <posttitle>
                <small>
                    <%= truncate(post.title, :length => 50) %>
                </small>
            </posttitle>
            <iconcontainer>
                <%= render partial: "ui_components/mbmenu" %>
            </iconcontainer>
        </mesh>
    </handle>
</post>