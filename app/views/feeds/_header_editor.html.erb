
<mesh title="heading" class="flex-center offset-icons gap2">
    <h1><%= @feed.name %></h1>
    <%= render partial: "ui_components/mbmenu" %>
</mesh>

<mesh title="New post box" class="flex-center gap4">
    <%= form_for Post.new do |f| %>
        <%= f.text_field :content %>
        <%= f.hidden_field :feed_id, value: @feed.id %>
        <%= f.submit %>
    <% end %>
</mesh>
