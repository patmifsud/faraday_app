 <container> <inner>
    <h1>Faraday Dev</h1>
    <small> V.0.01 | Better homepage coming soon.</small>
</inner></container> 


<% if @current_user.present? %>
     <container> <inner>
        <h5>My feeds:</h5>
            <div style="margin:30px 0;">
                <mesh>
                    <% @current_user.feeds.each do |feed| %>
                        <%= link_to feed.name, feed_path(feed.slug), class: "button"%> 
                    <% end %>   
                </mesh>
                 <div style="margin:5px 0;">
                    <%= link_to ("+ &nbsp; Feed".html_safe), new_feed_path, class: "button primary" %>
                </div>
            </div>
    </inner></container> 
<% end %>   

 <container> <inner>
    <h5>All feeds:</h5>
        <% @users.each do |user| %>
            <div style="margin:30px 0;">
                <p class="bold" style="margin:0 0 10px 0;"> 
                    <%= user.email %> <%= user.name %> 
                </p>
                <mesh>
                    <% user.feeds.each do |feed| %>
                        <%= link_to feed.name, feed_path(feed.slug), class: "button"%> 
                    <% end %>   
                </mesh>
            </div>
        <% end %>
</inner></container> 

